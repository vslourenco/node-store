<%- include('../partials/head.ejs') %>
</head>

<body>
   <%- include('../partials/navigation.ejs') %>

   <main class="container">
        <div class="row">
            <form class="col s4 offset-s4" action="/login" method="POST">
                <% if(errorMessage){ %>
                    <div class="card-alert card red lighten-5">
                        <div class="card-content red-text">
                            <strong><%= errorMessage %></strong>
                        </div>
                    </div>
                <% } %>
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <div class="row">
                    <div class="input-field col s12">
                        <input type="text" name="email" id="email" value="<%= oldInput.email %>" class="<%= validationErrors. find(e=> e.param === 'email') ? 'invalid' : '' %>">
                        <label for="email">E-mail</label>
                    </div>
                    <div class="input-field col s12">
                        <input type="password" name="password" id="password" value="<%= oldInput.password %>" class="<%= validationErrors. find(e=> e.param === 'password') ? 'invalid' : '' %>">
                        <label for="password">Password</label>
                    </div>
                    <div class="input-field col s12">
                        <button class="waves-effect waves-light btn blue" type="submit">Login</button>
                    </div>
                    <div class="input-field col s12">
                        <a href="/reset">Reset Password</a>
                    </div>
                </div>
            </form>
        </div>
    </main>
    
<%- include('../partials/end.ejs') %>