<%- include('../partials/head.ejs') %>
</head>

<body>
    <%- include('../partials/navigation.ejs') %>

    <main class="container">
        <% if (prods.length > 0) { %>
            <div class="row">
                <% for (let product of prods) { %>
                    <div class="col s12 m4">
                        <div class="card">
                            <div class="card-image">
                                <img src="<%= product.imageUrl %>" alt="<%= product.title %>">
                            </div>
                            <div class="card-content">
                                <span class="card-title"><%= product.title %></span>
                                <h3>$<%= product.price %></h3>
                                <p><%= product.description %></p>
                            </div>
                            <div class="card-action">
                                <form action="/admin/delete-product" method="POST">
                                    <a class="waves-effect waves-light btn blue" href="/admin/edit-product/<%= product._id %>?edit=true"><i class="material-icons left">edit</i>Edit</a>
                                    <input type="hidden" value="<%= product._id %>" name="productId">
                                    <button class="waves-effect waves-light btn red" type="submit"><i class="material-icons left">delete</i>Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>
        <% } else { %>
            <h1 class="header center blue-text">No Products Found!</h1>
        <% } %>
    </main>
<%- include('../partials/end.ejs') %>